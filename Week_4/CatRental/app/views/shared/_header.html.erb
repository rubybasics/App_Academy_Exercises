<h1><a href="/">Cat Rental ...!</a></h1>

<% flash.each do |type, messages| %>
	<p>
		<div class="flash <%= type %>">
			<p>
				<% messages.each do |message| %>
					<%= message %>
					<% end %>
			</p>
		</div>
	</p>
<% end %>

<% user = current_user %>
<% if user.nil? %>
	<span class="buttonlink"><%= link_to "Log in", login_url, method: :get %></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	<span class="buttonlink"><%= link_to "Sign up", new_user_url, method: :get %></span>
<% else %>
	<p>logged in as <b><%= user.username %></b></p>
	<span class="buttonlink"><%= link_to "Log out", logout_url, :method => :delete %></span>
<% end %>
<hr>
