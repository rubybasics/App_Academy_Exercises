<h3>Sign up!</h3>
<form action="<%= users_url %>" method="post" accept-charset="utf-8">
		<input type="hidden"
					 name="authenticity_token"
					 value="<%= form_authenticity_token %>">

		<label for="email"><b>Email:</b> </label>
		<input type="text" name="user[email]" id="email" value="<%= @user.email %>" placeholder="email">
		<br>
		<label for="password"><b>Password:</b> </label>
		<input type="password" name="user[password]" id="password" placeholder="password">
		<br>
		<label for="confirm_password"><b>Confirm:</b> </label>
		<input type="password" name="confirm_password" id="confirm_password" placeholder="retype password">

	<p><input type="submit" value="Sign up for Friend Circle!"></p>
</form>